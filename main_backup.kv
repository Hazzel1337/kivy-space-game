#:include pipe.kv

FloatLayout:
    id: mainthing
    Background:
        id: background
        canvas.before:
            #Rectangle:
                #size: self.bg0.size
                #pos: self.pos
                #texture: self.bg0
            #Rectangle:
                #size: self.width, self.height
                #pos: self.pos[0] + self.width /5, self.pos[1]
                #pos: self.pos
                #texture: self.bg1
            #Rectangle:
                #size: self.width /5, self.height /5
                #pos: self.pos
                #texture: self.bg2
            #Rectangle:
                #size: self.width /5, self.height /5
                #pos: self.pos
                #texture: self.bg3
            #Rectangle:
                #size: self.width /5, self.height /5
                #pos: self.pos
                #texture: self.bg4
            Rectangle:
                size: self.width, 138
                pos: self.pos[0], self.pos[1] + self.height - 138
                texture: self.cloud_texture
            Rectangle:
                size: self.width, 96
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture
    Label:
        id: score
        size_hint_y: None
        height: 96
        text: "0"
        font_size: 40
    Button:
        text: "Start game"
        background_normal: "transparent.png"
        background_down: "transparent.png"
        id: start_button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()
    Bird:
        source: "bird1.png"
        size_hint: None, None
        size: 46, 34
        pos: 20, (root.height - 96) / 2.0
        id: bird

    Ship:
        #source: "Ship1.png"
        #size_hint: None, None
        #size: 64, 64
        #pos: 20, (root.height - 96) / 2.0
        id: ship
    arrow:
        id: arrow
        size_hint: .1, .1
        pos_hint: {"right": 1}
        cols: 3
        Button:
            text: "1"
            on_state: ship.move_topleft(self)
        Button:
            text: "2"
            on_state: ship.move_up(self)
        Button:
            text: "3"
            on_state: ship.move_topright(self)
        Button:
            text: "4"
            on_state: ship.move_left(self)
        Button:
            id: button5
            text: "5"
            #disabled: True
            on_press: ship.rotate()
        Button:
            text: "6"
            on_state: ship.move_right(self)
        Button:
            text: "7"
            on_state: ship.move_downleft(self)
        Button:
            text: "8"
            on_state: ship.move_down(self)
        Button:
            text: "9"
            on_state: ship.move_downright(self)






